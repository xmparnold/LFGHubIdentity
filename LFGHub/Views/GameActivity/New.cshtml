@model GameActivity

<div class="container w-75 mx-auto">
    <h2 class="text-center">Suggest New Game Activity</h2>

    <form class="shadow p-3 rounded" asp-controller="GameActivity" asp-action="Add" method="POST">
        <div class="mb-3">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
            <input class="form-control" asp-for="Name">
        </div>

        <div class="mb-3">
            <label asp-for="MinPlayers"></label>
            <span asp-validation-for="MinPlayers" class="text-danger font-weight-bold"></span>
            <input class="form-control" asp-for="MinPlayers">
        </div>

        <div class="mb-3">
            <label asp-for="MaxPlayers"></label>
            <span asp-validation-for="MaxPlayers" class="text-danger font-weight-bold"></span>
            <input class="form-control" asp-for="MaxPlayers">
        </div>

        <button class="btn btn-success">Submit</button>
    </form>

</div>